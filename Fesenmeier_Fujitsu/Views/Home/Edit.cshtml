
@model Movie

<h1>@Model.title</h1>
<form asp-controller="Home" asp-action="Edit" method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <img style="max-height:350px" src="@Model.image" />
        </div>

        <div class="form-group col-md-8">
            <div class="form-group">
                <label for="title">Title</label>
                <input asp-for="title" class="form-control" id="title" placeholder="Title" value="@Model.title">
            </div>
            <div class="form-group">
                <label for="director">Director</label>
                <input asp-for="director" class="form-control" id="director" placeholder="Director" value="@Model.director">
            </div>
            <div class="form-group">
                <label for="actors">Actors</label>
                <input asp-for="actors" class="form-control" id="actors" placeholder="Actors" value="@Model.actors">
            </div>
            <div class="form-group">
                <label for="year">Year</label>
                <input asp-for="year" type="number" class="form-control" id="year" placeholder="Year" value="@Model.year">
            </div>
            <div class="form-group">
                <label for="image">Image path</label>
                <input asp-for="image" type="url" class="form-control" id="image" placeholder="Image path" value="@Model.image">
            </div>

        </div>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>  
    <button  asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id" type="submit" class="btn btn-danger">Delete</button>        
    <a href="/home" type="button" class="btn btn-primary">Back</a>
</form>






